<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@android:color/white">

    <!-- Título -->
    <TextView
        android:id="@+id/txtTituloMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menú"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginBottom="24dp" />

    <!-- Botones de opciones -->
    <Button
        android:id="@+id/btnBiblioteca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Biblioteca de patrones" />

    <Button
        android:id="@+id/btnOptimizacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Optimización de corte"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnGestionTela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestión de tela"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnOrganizacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Organización"
        android:layout_marginTop="16dp" />

    <!-- Botón Salir -->
    <Button
        android:id="@+id/btnSalir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salir de sesión"
        android:background="#F44336"
        android:textColor="#FFFFFF"
        android:layout_marginTop="40dp" />

</LinearLayout>